{
  "name": "zilliqa-js",
  "version": "0.1.4",
  "license": "SEE LICENSE in LICENSE",
  "description": "zilliqa js library",
  "repository": "https://github.com/Zilliqa/Zilliqa-Javascript-Library",
  "main": "dist/zilliqa.server.js",
  "private": true,
  "browser": "dist/zilliqa.client.js",
  "typings": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -b tsconfig.json",
    "bundle": "ts-node -P scripts/tsconfig.json scripts/bundle.ts umd,esm",
    "test": "jest -c jest.config.js --rootDir=.",
    "test:integration": "jest -c jest.iconfig.js",
    "test:build": "yarn bundle && jest -c jest.build.config.js",
    "publish": "yarn build && yarn publish",
    "format": "prettier --write '**/*.{ts,tsx,js}' --config .prettierrc"
  },
  "workspaces": [
    "packages/*"
  ],
  "devDependencies": {
    "@babel/cli": "^7.0.0-beta.56",
    "@babel/core": "7.0.0-beta.54",
