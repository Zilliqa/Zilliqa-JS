    "camelcase": "^5.0.0",
    "cross-env": "^5.2.0",
    "dotenv": "^6.0.0",
    "husky": "^1.1.2",
    "jest": "^23.4.2",
    "jest-fetch-mock": "^1.6.6",
    "jest-watch-typeahead": "^0.2.0",
    "lerna": "^3.4.0",
    "prettier": "^1.14.3",
    "pretty-quick": "^1.8.0",
